# =============================================================================
# AX TECH Wheelchair Platform - Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://axtech:axtech_local_dev@localhost:5432/axtech_wheelchair?schema=public

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Generate secrets with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters-long
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# -----------------------------------------------------------------------------
# AWS S3 / LocalStack (for local development)
# -----------------------------------------------------------------------------
S3_ENDPOINT=http://localhost:4566
S3_REGION=eu-west-1
S3_ACCESS_KEY=localstack
S3_SECRET_KEY=localstack
S3_BUCKET_DOCUMENTS=axtech-documents-dev
S3_BUCKET_GENERATED=axtech-generated-dev

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# -----------------------------------------------------------------------------
# Email (Brevo) - Optional for local development
# -----------------------------------------------------------------------------
# BREVO_API_KEY=your-brevo-api-key
# EMAIL_FROM=noreply@axtech.fr

# -----------------------------------------------------------------------------
# SMS (Twilio) - Optional for local development
# -----------------------------------------------------------------------------
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+33xxxxxxxxx

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------
# SENTRY_DSN=your-sentry-dsn
